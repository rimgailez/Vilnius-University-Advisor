<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="VUA_App.Views.CompareLecturers">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout>
            <Label Text="Pasirinkite dėstytojus"
                   FontSize="Title"
                   FontAttributes="Italic"
                   HorizontalTextAlignment="Center"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Text="Pirmas dėstytojas:"
                       FontAttributes="Italic"
                       Grid.Row="1"
                       Grid.Column="1"/>
                <Picker x:Name="LecturerFaculty1"
                        Title="Fakultetas:"
                        Grid.Row="2"
                        Grid.Column="1"/>
                <Picker x:Name="LecturerName1"
                        Title="Vardas Pavardė:"
                        Grid.Row="3"
                        Grid.Column="1"/>
                <Label Text="Antras dėstytojas:"
                       FontAttributes="Italic"
                       Grid.Row="1"
                       Grid.Column="2"/>
                <Picker x:Name="LecturerFaculty2"
                        Title="Fakultetas:"
                        Grid.Row="2"
                        Grid.Column="2"/>
                <Picker x:Name="LecturerName2"
                        Title="Vardas Pavardė:"
                        Grid.Row="3"
                        Grid.Column="2"/>
            </Grid>
            <Button Text="Palyginti"
                    Clicked="OnCompare"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Label x:Name="Evaluation1"
                           Text=""
                           Grid.Row="1"
                           Grid.Column="1"/>
                    <Label x:Name="Number1"
                           Text=""
                           Grid.Row="2"
                           Grid.Column="1"/>
                    <Label x:Name="Comments1"
                           Text=""
                           Grid.Row="3"
                           Grid.Column="1"/>
                    <Label x:Name="Evaluation2"
                           Text=""
                           Grid.Row="1"
                           Grid.Column="2"/>
                    <Label x:Name="Number2"
                           Text=""
                           Grid.Row="2"
                           Grid.Column="2"/>
                    <Label x:Name="Comments2"
                           Text=""
                           Grid.Row="3"
                           Grid.Column="2"/>
                </Grid>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>